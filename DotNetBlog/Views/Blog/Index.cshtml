@using DotNetBlog.Models
@model IEnumerable<DotNetBlog.Models.BlogViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block_posts block_6">
    <!-- featured_title -->
    <div class="featured_title">
        <h4>Últimos Posts</h4>
        <a href="#" class="view_button">Ver Todos</a>
    </div>
    <!-- // featured_title -->
    <!-- block_inner -->
    <div class="block_inner">

        @foreach (var post in Model)
        {
            <article class="block_hz_post">
                <div class="standard_post">
                    <div class="list_thum">
                        <div class="hz_thumb_post">
                            <div class="cat_list_post">
                                <span class="hz_cat_post">
                                    @foreach (var cat in post.Category)
                                    {
                                        <a href="#">@cat</a>
                                    }
                                </span>
                            </div>
                            <a href="@Url.Action("Post", "Blog", new { post.ID })">
                                <img src="@post.ImagePreview" class="img-responsive hz_appear" alt="Responsive image">
                            </a> 
                         </div>

                    </div>
                    <div class="list_content">
                        <div class="block_hz_top_post">
                            <div class="block_hz_title_and_meta">
                                <h4 class="hz_title"><a href="#">Simply Dummy Text Of The Printing</a></h4>
                                <div class="hz_meta_post">
                                    <span class="hz_date_post"><i class="fa fa-calendar"></i><a href="#">@post.PostedOn</a></span>
                                    <span class="hz_date_post"><i class="fa fa-comments"></i><a href="#">Comentarios</a><i class="badge comments">0</i></span>
                                </div>
                            </div>
                        </div>

                        <div class="block_hz_main_post_content">
                            <div class="hz_content">
                                <p>@post.ShortDescription</p>
                            </div>

                            <div class="hz_bottom_post">

                                <div class="hz_read_more">
                                    <a href="#">Leer más</a>
                                </div>

                                <div class="votes">
                                    <span class="fa fa-thumbs-o-up"></span> <i class="badge ">0</i>

                                    <span class="fa fa-thumbs-o-down"></span><i class="badge ">0</i>

                                </div>

                                <div class="hz_icon_shere">

                                    <span class="share_toggle pi-btn">
                                        <i class="fa fa-share-alt"></i>
                                    </span>

                                    <div class="hz_share">
                                        <span><a href="#"><i class="fa fa-facebook"></i></a></span>
                                        <span><a href="#"><i class="fa fa-twitter"></i></a></span>
                                        <span><a href="#"><i class="fa fa-google-plus"></i></a></span>
                                        <span><a href="#"><i class="fa fa-stumbleupon"></i></a></span>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </article>
        }
    </div>
    <!-- // block_inner -->
</div>